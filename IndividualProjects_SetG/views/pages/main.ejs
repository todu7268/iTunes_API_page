<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<!--Adding icons to use for the buttons-->

<form action="/" method="post">
    <div class="mb-3">
        <input type="text" class="form-control" id="search" name="search" placeholder="Search" style="text-align:center">
        <!--Search Bar-->
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg" style="float:right"><i class="fa fa-search"></i></button>
        <!--Search Button, Block-->
    </div>
</form>

<% if (results) { %>
<div style="margin-top:50px;">
    <center>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <% if (image != ""){ %>
                <img src="<%=image %>" class="card-img-top" alt="Image" style="width:100px; height=100px;">
                <% } %>
                <!--This is separate because the image url might still be missing, but the rest of the stuff can be displayed-->
                <% if (url != ""){ %>
                <h5 class="card-title"> Name: <%= name %> </h5>
                <h6 class="card-subtitle mb-2 text-muted">Genre: <%= genre %></h6>
                <p class="card-text"> Release Date: <%= release_date %> </p>
                <a class="btn btn-primary" href="<%= url %>"> <i class="fa fa-external-link"></i> </a>
                <% } %>
            </div>
        </div>
    </center>
</div>
<% } %>

<%- include ('../partials/footer') %>